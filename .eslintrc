{
  "env": {
    "browser": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "describe": "readonly",
    "it": "readonly",
    "should": "readonly",
    "xit": "readonly"
  },
  "ignorePatterns": ["coverage", "lib", "mochawesome-report"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-control-regex": "off",
    "no-empty": "off"
  }
}
